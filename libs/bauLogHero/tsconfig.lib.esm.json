{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "es6",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../dist/libs/@baudevs/bau-log-hero",
    "declaration": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "node_modules", "dist"]
}
