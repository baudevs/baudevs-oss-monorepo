{
  "name": "@baudevs/bau-gtm-tracker",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/bau-gtm-tracker/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": ["lint", "nx-rollup:build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "tagPrefix": "release/@baudevs/bau-gtm-tracker/",
        "trackDeps": true,
        "push": true,
        "skipCommitTypes": ["ci", "docs", "test", "style"],
        "postTargets": ["@baudevs/bau-gtm-tracker:github", "@baudevs/bau-gtm-tracker:publish"],
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  }
}
