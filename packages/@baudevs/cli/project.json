{
  "name": "@baudevs/cli",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/@baudevs/cli",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          "{projectRoot}/**/*.md",
          "{projectRoot}/**/package.json"
        ],
        "format": ["cjs"],
        "platform": "node",
        "bundle": true,
        "thirdParty": true,
        "external": ["@libsql/client"],
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "sourcemap": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/@baudevs/cli/**/*.ts"
        ],
        "ignoredDependencies": [
          "@libsql/client",
          "@types/inquirer",
          "chalk",
          "commander",
          "drizzle-orm",
          "inquirer",
          "ora"
        ]
      }
    },
    "run-bin": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": ["node dist/packages/@baudevs/cli/index.js"]
      }
    }
  },
  "tags": ["baudevs", "targetivo gmbh", "magicusprime", "targetivo", "magicusprime lda", "baucms", "@baudevs/cli"]
}
