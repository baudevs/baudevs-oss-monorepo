{
  "name": "@baudevs/cli",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "cache": false,
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "{workspaceRoot}/dist/packages/@baudevs/cli",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          "{projectRoot}/**/*.md",
          "{projectRoot}/**/package.json"
        ],
        "format": ["esm"],
        "platform": "node",
        "bundle": true,
        "external": ["@baudevs/*"],
        "generateTypes": true,
        "esbuildOptions": {
          "outExtension": { ".js": ".js" },
          "sourcemap": true,
          "outdir": "dist/packages/@baudevs/cli"
        }
      }
    },
    "release": {
      "cache": false,
      "executor": "@nx/js:tsc",
      "options": {
        "project": "@baudevs/cli",
        "packageRoot": "dist/{projectRoot}",
        "publish": false
      },
      "changelog": {
        "projectChangelogs": {
          "file": "CHANGELOG.md",
          "createRelease": "github"
        }
      }
    },
    "publish": {
      "executor": "@nx/js:tsc",
      "options": {
        "project": "@baudevs/cli",
        "packageRoot": "dist/{projectRoot}"
      }
    }
  },
  "tags": ["baudevs", "targetivo gmbh", "magicusprime", "targetivo", "magicusprime lda", "baucms", "@baudevs/cli"]
}
